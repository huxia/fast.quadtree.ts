{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"],
    "types": [ "node", "jest" ],
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "test/*.ts"
  ]
}